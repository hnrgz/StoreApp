@page
@model StoreApp.Pages.DemoModel
@{

}
<div class="my-5 text-center">
    <div class="display-6">Hello @Model?.UserName</div>
    <p class="text-danger">@HttpContext.Session.GetString("name")</p>
    <form method="post" asp-page="/demo">
        <div class="form-group">
            <input class="form-control" name="name" placeholder="Enter your username" />
            <input type="submit" class="btn btn-secondary my-3" />
        </div>
    </form>
</div>