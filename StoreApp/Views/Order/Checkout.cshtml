@model Order

<div class="text-danger" asp-validation-summary="All"></div>

<form method="post" asp-action="Checkout">
    <div class="form-group" my-3>
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="form-group" my-3>
        <label asp-for="AdressLine1"></label>
        <input class="form-control" asp-for="AdressLine1">
    </div>
    <div class="form-group" my-3>
        <label asp-for="AdressLine2"></label>
        <input class="form-control" asp-for="AdressLine2">
    </div>
    <div class="form-group" my-3>
        <label asp-for="AdressLine3"></label>
        <input class="form-control" asp-for="AdressLine3">
    </div>
    <div class="form-group" my-3>
        <label asp-for="City">City</label>
        <input class="form-control" asp-for="City">
    </div>
    <div class="form-group" my-3>
        <input asp-for="GiftWrap">
        <label>Gift wrap these items.</label>
    </div>
    <div class="text-center">
        <button type="Submit" class="btn btn-secondary">Complete Order</button>
    </div>
</form>